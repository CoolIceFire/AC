# include <stdio.h>


int main ()
{
    int n, a, b, c ;
    double num ;
    while (~scanf ("%d", &n) && n)
    {
        a = b = c = 0 ;
        while (n--){
            scanf ("%lf", &num) ;
            num < 0 ? a ++ : num==0 ? b++ : c++ ;
        }
        printf ("%d %d %d\n", a, b, c) ;
    }
    return 0 ;
}
